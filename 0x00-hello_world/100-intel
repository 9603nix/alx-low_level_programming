#!/bin/bash

# Check if the C file variable is set
if [ -z "$CFILE" ]; then
  echo "Error: CFILE variable is not set."
  exit 1
fi

# Check if the C file exists
if [ ! -e "$CFILE" ]; then
  echo "Error: C file '$CFILE' not found."
  exit 1
fi

# Get the base name of the C file without the extension
BASENAME=$(basename -s .c "$CFILE")

# Generate assembly code using gcc with Intel syntax
gcc -S -masm=intel -Wall -Werror -Wextra -pedantic -std=gnu89 "$CFILE" -o "$BASENAME.s"

# Check if compilation was successful
if [ $? -eq 0 ]; then
  echo "Assembly code generated successfully. Output file: $BASENAME.s"
else
  echo "Error during compilation. Please check the C code."
fi

